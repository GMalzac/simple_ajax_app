<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li data-restaurant-id="<%= restaurant.id %>">
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <%= " - " %>
      <%= link_to "Delete", restaurant, method: :delete, remote: true, data: {confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
